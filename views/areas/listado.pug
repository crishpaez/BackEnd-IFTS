extends ../layout.pug

block contenido
  h1 Áreas registradas

  if mensajeExito
    script.
      alert("#{mensajeExito}")

  if datos && datos.length
    ul
      each area in datos
        li
          p ID: #{area.id}
          p Nombre: #{area.nombre}
          p Descripción: #{area.descripcion}
          form(action=`/areas/editar/${area.id}`, method='GET')
            button(type='submit') Editar
          form(action=`/areas/eliminar/${area.id}?_method=DELETE`, method='POST')
            button(type='submit', onclick='return confirm("¿Eliminar esta área?")') Eliminar
          hr
  else
    p No hay áreas registradas.

  form(action='/areas/nueva', method='GET')
    button(type='submit') Agregar nueva área
    